html {
	background: $bodycolor;
	-webkit-overflow-scrolling: touch;
	-webkit-tap-highlight-color: $smallcolor;
	-webkit-text-size-adjust: 100%;
	-ms-text-size-adjust: 100%; 
}

body {
	@include font-size($textsize);
	font-family: $primaryfont;
	font-weight: 400;
	font-style: normal;
	line-height: $baselinebase;
	color: $textcolor;
}

// ================================================================================================== 
// Root Layout

[role="main"],
[role="banner"],
[role="contentinfo"] {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

[role="banner"],
[role="contentinfo"] {
	padding: $baselineheight 0;
}

// Not quite sure about this method
// but it's effective.

[role="main"],
[role="contentinfo"] {
	p:last-child,
	ul:last-child,
	dl:last-child,
	ol:last-child,
	figure:last-child,
	table:last-child,
	form:last-child {
		margin-bottom: 0;
	}
}

[role="contentinfo"] {
	@include margin(top, 3);
	padding: $baselineheight * 3 0;
}

.wrap {
	@include background-grid($color: rgba(0,250,250,.2));
	margin: 0 2em;
}

.clearfix {
	@include clearfix();
}

// ================================================================================================== 
// Logo

.logo {
	@include visuallyhidden();
}

// ================================================================================================== 
// Typography

::-moz-selection {
    background: $primarycolor;
    color: #fff;
    text-shadow: none;
}

::selection {
    background: $primarycolor;
    color: #fff;
    text-shadow: none;
}

a {
	color: $linkcolor;
	text-decoration: none;
	background: url("../img/anchor-bg.png") 0 90% repeat-x;

	&:hover,
	&:focus {
	color: $linkcolor-hover;
	}

	&:focus {
	@include tab-focus();
	}
}

h1, .h1 { 
	@include type-scale(xlarge);
	@include margin(bottom, 1);
	line-height: 1.1; }
h2, .h2 { 
	@include type-scale(large);
	@include margin(bottom, 1);
	line-height: 1.2; }
h3, .h3 { 
	@include type-scale(medium);
	@include margin(bottom, 1);
	line-height: 1.2; }
h4, .h4 { 
	@include type-scale(base);
	@include margin(bottom, 1);
	line-height: 1.3; }
h5, .h5 { 
	@include type-scale(small);
	@include margin(bottom, 1);
	line-height: $baselinebase; }
h6, .h6 { 
	@include type-scale(small);
	@include margin(bottom, 1);
	line-height:$baselinebase;
	text-transform: uppercase; }

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6 {
	font-family: $secondaryfont;
	font-weight: 700;
	text-transform: uppercase;
	letter-spacing: -1px;
	color: $headingcolor;

	small {
		font-weight: 300;
	}

	em {
		font-style: italic;
	}
}

p {
	@include margin(bottom, 1);
}

p.intro {
	@include type-scale(medium);
	@include margin(bottom, 1);
	line-height: 1.2;
}

.entry-meta {
	font-family: $secondaryfont;
	@include type-scale(small);
	text-transform: uppercase;
	font-weight: 700;
	letter-spacing: 1px;
	@include margin(bottom, 1);
	color: $primarycolor;
	//border-bottom: 1px solid #ddd;
	border-top: 1px solid #ddd;
	padding-left: 2px;

	a {
		color: $smallcolor;
		background-image: none;
		font-weight: 300;

		&:hover {
			color: $linkcolor-hover;
		}
	}
}

ul, ol {
	list-style: disc;
	margin-top: 0;
	@include margin(bottom, 1);
	padding-left: 3em;

	ul,
	ol {
		margin-bottom: 0;
	}
}

[role="banner"] h1, [role="banner"] .h1 {
	@include zero();
	font-family: $secondaryfont;
	font-weight: 300;
	color: $smallcolor;
	@include type-scale(small);
	letter-spacing: 1px;

	a {
		color: $smallcolor;
		background-image: none;
	}
}

[role="contentinfo"] {

	background-color: darken($secondarycolor, 23%);
	font-family: $secondaryfont;
	font-weight: 700;
	color: lighten($secondarycolor, 43%);
	text-align: center;
	text-transform: uppercase;
	letter-spacing: 1px;

	p, ul, ol, table, form {
		@include type-scale(small);
		@include margin(bottom, 1);
	}

	a {
		color: lighten($secondarycolor, 56%);
		background-image: none;

		&:hover {
			color: #fff;	
		}
	}
}


// ================================================================================================== 
// Navigation

[role="navigation"] {

	ul {
		list-style: none;
		@include zero();
		margin-left: -2%;
		text-align: center;

		li {
		line-height: $baselineheight /1.8;
		display: inline-block;
		margin-left: 2%;
		}
	}

	a {
		font-family: $secondaryfont;
		font-weight: 300;
		color: $smallcolor;
		@include type-scale(small);
		background-image: none;
		text-transform: uppercase;
		letter-spacing: 1px;

		&:hover {
		color: #000;
		}

		&:focus {
		color: #fff;
		background-color: $primarycolor;
		outline: none;
		}
	}
}

// ================================================================================================== 
// Buttons

.btn {
	font-family: $secondaryfont;
	font-weight: 300;
	color: rgb(51, 51, 51);
	@include type-scale(small);

	border: 1px solid rgb(223, 216, 216);
	border-radius: 3px;
	display: inline-block;
	text-decoration: none;
	text-transform: uppercase;
	letter-spacing: 1px;
	background: white none;
	padding: 7px 18px;

	&:hover:not(:disabled) { 
		background: #f7f7f7;
		border-color: #777;
		border-bottom-color: #ccc;
	}

	&:focus:not(:disabled) {
		color: #fff;
		background-color: $primarycolor;
		outline: none;
	}

	&.btn-large {
		width: 100%;
		@include margin(top, 1);
		@include margin(bottom, 1);
		text-align: center;
		padding: 14px 0;

		@include breakpoint($bp2) {
    		@include grid-span(2, 2);
  		}

  		@include breakpoint($bp3) {
    		@include grid-span(4, 2);
  		}
	}
}

// ================================================================================================== 
// Media

figure {
	@include clearfix;
	@include margin(bottom, 1);

	img {
		@include breakpoint($bp4) {
			@include grid-span(6);
		}
	}

	figcaption {
		@include breakpoint($bp4) {
			@include grid-span(1, 6);
		}

		font-style: italic;
		@include type-scale(base);
		color: lighten($neutralcolor, 20%);
		padding-top: 1em;
		border-top: 1px solid lighten($neutralcolor, 20%);
	}

	&.figure-alternate {
		img {
			@include breakpoint($bp4) { @include grid-span(5, 2); }
		}

		figcaption {
			@include breakpoint($bp4) { @include grid-span(1); }
		}
	}
}

// ================================================================================================== 
// Specifics (you should delete this section)

.specifics {
	@include clearfix();
	text-align: center;

	div {
		@include margin(bottom, 1);
	}

	.specifics__frontend {
		@include grid-span(1, 1);

		@include breakpoint($bp2) {
    		@include grid-span(1, 1);
  		}

  		@include breakpoint($bp3) {
    		@include grid-span(3, 1);
  		}

	}

	.specifics__backend {
		@include grid-span(1, 2);

		@include breakpoint($bp2) {
    		@include grid-span(1, 2);
  		}

  		@include breakpoint($bp3) {
    		@include grid-span(3, 4);
  		}
	}

	.specifics__graphic {
		@include grid-span(1, 1);
		clear: left;

		@include breakpoint($bp2) {
    		@include grid-span(1, 3);
  		}

  		@include breakpoint($bp3) {
    		@include grid-span(3, 1);
    		clear: left;
  		}
	}

	.specifics__global {
		@include grid-span(1, 2);

		@include breakpoint($bp2) {
    		@include grid-span(1, 4);
  		}

  		@include breakpoint($bp3) {
    		@include grid-span(3, 4);
  		}
	}

}

.home {

	.welcome {
		background-color: $primarycolor;
		@include margin(bottom, 3);
		padding: $baselineheight * 3 0;

		* {
			color: lighten($primarycolor, 42%);
		}
	}

}

.project {
	@include margin(bottom, 2);
	padding: $baselineheight *1 0 $baselineheight *2;
	border-bottom: 1px solid lighten($neutralcolor, 33%);

	img {
		max-width: 100%;
	}
}

.about__skills {
	list-style: none;
	@include zero;

	li {
		@include margin(bottom, 1);
	}
}

// ================================================================================================== 
// Media Queries

@media screen and (min-width: $bp3) {

	h1, .h1 { 
		@include type-scale(xxxlarge);
		@include margin(bottom, 1);
		line-height: 1.1; }
	h2, .h2 { 
		@include type-scale(xxlarge);
		@include margin(bottom, 1);
		line-height: 1.2; }
	h3, .h3 { 
		@include type-scale(xlarge);
		@include margin(bottom, 1);
		line-height: 1.2; }
	h4, .h4 { 
		@include type-scale(large);
		@include margin(bottom, 1);
		line-height: 1.3; }
	h5, .h5 { 
		@include type-scale(medium);
		@include margin(bottom, 1);
		line-height: $baselinebase; }
	h6, .h6 { 
		@include type-scale(base);
		@include margin(bottom, 1);
		line-height:$baselinebase;
		text-transform: uppercase; }

	p, ul, ol, table, form {
		@include type-scale(medium);
		@include margin(bottom, 1);
	}

	p.intro {
		@include type-scale(xlarge);
		@include margin(bottom, 1);
		line-height: 1.2;
	}

	.entry-meta {
		@include type-scale(small);
		@include margin(bottom, 2);
		border-top: none;
	}

	nav[role="navigation"] {
		@include type-scale(small);

		ul {
			@include zero();
			text-align: left;

			li {
			display: list-item;
			margin-left: 0;
			}
		}

	}

	[role="banner"] {
		@include margin(bottom, 1);
		@include margin(top, 1);
	}

	[role="contentinfo"] {
		@include margin(top, 6);
		padding: $baselineheight * 6 0;
	}

	.home {

		.welcome {
			@include margin(bottom, 6);
			padding: $baselineheight * 6 0;
		}

	}

}

@media screen and (min-width: $bp4) {

	.wrap {
		max-width: $max-width;
		margin: 0 auto;
	}

}